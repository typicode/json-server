{
  "exclude": ["src/**/*.test.ts"],
  "compilerOptions": {
    "outDir": "./lib",
    "target": "esnext",
    "module": "nodenext",
    "skipLibCheck": true,
    "strict": true,
    "allowImportingTsExtensions": true,
    "rewriteRelativeImportExtensions": true,
    "erasableSyntaxOnly": true,
    "verbatimModuleSyntax": true
  }
}
